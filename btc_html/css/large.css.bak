@media only screen and (min-width: 1920px) {/* 1920 */
    
    
   /* GRID */
    .large-1 {width: 8%;}
	.large-2 {width: 16.66%;}
    .large-3 {width: 25%;}
    .large-4 {width: 33.33%;}
	
	
	.large-4-img{flex:33.33333%}
	.large-8-img{flex:66.66666%}
	
    
	.img-large-remove{
		display: flex;	
	}
	
	.img-medium-large-remove{
		display: none;	
	}
	
	.column-no-pad {
		float: left;  
		padding-left: 0;
		padding-right: 0;
		margin: 0 0 0 0;
	}
	
	.img-txt-container-header {
		display: flex;
		align-items: center;
		justify-content:center;
		flex-direction: row;
		padding-left:0;
		padding-right: 0;
		padding-top: 0;
		padding-bottom: 0;
		height:60vh;
	}
	
	header{
		font-size: 24px;
		font-weight: 700;
		background-image: url('../images/Header_background.png');
		background-repeat: no-repeat;
		background-attachment: fixed;  
		background-size: cover;
		color: #FFFFFF;
		height:60vh;
	}
	
	
    header h1{
		font-size: 36px;
		line-height: 54px;
		font-weight:700;
	}

	main h1{
		font-size: 64px;
		line-height: 76px;
		font-weight:700;
	}
	
	main h2{
		font-size: 48px;
		line-height: 64px;
		font-weight:700;
	}
	
	main h3{
		font-size: 24px;
		line-height: 32px;
		font-weight:700;
}
    
} /* end of media query */