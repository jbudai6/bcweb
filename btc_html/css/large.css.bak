@media only screen and (min-width: 1440px) {/* 1920 */
    
    
   /* GRID */
   	.large-0 {width: 0%}
    .large-1 {width: 8%;}
	.large-2 {width: 16.66%;}
    .large-3 {width: 25%;}
    .large-4 {width: 33.333333%;}
	.large-5 {width: 41.666666%;}
	.large-6 {width: 50%;}
	.large-7 {width: 58.333333%;}
	.large-8 {width: 66.666666%;}
	
	
	.large-4-img{flex:33.333333%;}
	.large-6-img{flex:50%;}
	.large-7-img{flex:58.333333%;}
	.large-8-img{flex:66.666666%;}
	
    
	.img-large-remove{
		display: flex;	
	}
	
	.img-medium-large-remove{
		display: none;	
	}
	
	.column-no-pad {
		float: left;  
		padding-left: 0;
		padding-right: 0;
		margin: 0 0 0 0;
	}
	
	.img-txt-container-header {
		display: flex;
		align-items: center;
		justify-content:center;
		flex-direction: row;
		padding-left:0;
		padding-right: 0;
		padding-top: 0;
		padding-bottom: 0;
		height:60vh;
	}
	
	.img-header{
		object-fit: cover;
		max-height: 50vh;
	}

	.img-txt-container {
		display: flex;
		align-items: center;
		justify-content: start;
		flex-direction: row;
		height: 25vh;
	}
	
	.why-invest-med {
		background-image: url('../images/Why_invest.png');
		background-repeat: no-repeat; 
		background-size: cover;
		height:0;
	}
	
	.why-fund-med {
		background-image: url('../images/Why_fundraise.png');
		background-repeat: no-repeat; 
		background-size: cover;
		height:0;
	}
	
	header{
		font-size: 24px;
		font-weight: 700;
		background-image: url('../images/Header_background.png');
		background-repeat: no-repeat;
		background-attachment: fixed;  
		background-size: cover;
		color: #FFFFFF;
		height:60vh;
	}
	
	
    header h1{
		font-size: 36px;
		line-height: 54px;
		font-weight:700;
	}

	main h1{
		font-size: 64px;
		line-height: 76px;
		font-weight:700;
	}
	
	main h2{
		font-size: 48px;
		line-height: 64px;
		font-weight:700;
	}
	
	main h3{
		font-size: 24px;
		line-height: 32px;
		font-weight:700;
}
    
} /* end of media query */