/* slider */
.slidecontainer {
  position: relative;
  width: 80%; /* Width of the outside container */
}

/* The slider itself */
.slider {
  -webkit-appearance: none;  /* Override default CSS styles */
  appearance: none;
  width: 100%; /* Full-width */
  height: 1.5px; /* Specified height */
  background: #71CBAB; 
  outline: none; /* Remove outline */
  opacity: 1; /* Set transparency (for mouse-over effects on hover) */
  -webkit-transition: .2s; /* 0.2 seconds transition on hover */
  transition: opacity .2s;
}

/* Mouse-over effects */
.slider:hover {
  opacity: 1; /* Fully shown on mouse-over */
}

/* The slider handle (use -webkit- (Chrome, Opera, Safari, Edge) and -moz- (Firefox) to override default look) */
.slider::-webkit-slider-thumb {
  -webkit-appearance: none; /* Override default look */
  appearance: none;
  width: 16px;
  height: 16px;
  -webkit-border-radius: 16px;
  -moz-border-radius: 16px;
  border-radius: 16px;
  background: #71CBAB;
  cursor: pointer; /* Cursor on hover */
}

.slider::-moz-range-thumb {
  border: 0;
  width: 16px;
  height: 16px;
  -webkit-border-radius: 16px;
  -moz-border-radius: 16px;
  border-radius: 16px;
  background: #71CBAB;
  cursor: pointer; /* Cursor on hover */
}

.bubble {
  background: none;
  color: white;
  font-size: 14px;
  line-height: 18px;
  font-weight:400;
  position: absolute;
  border-radius: 4px;
  left: 50%;
  bottom: 20px;
  transform: translateX(-50%);
}
.bubble::after {
  content: "";
  position: absolute;
  width: 10px;
  height: 10px;
  background: none;
  bottom: 20px;
  left: 50%;
}

.bubble::before {
  content:"$";
}


/* navigation rules */
button#hamburgerBtn { 
    background: none;
    border:none;
    color: #fff;
    font-size: 2.4rem;
    cursor: pointer;
}
nav ul{margin:0; padding: 0;}
nav li {list-style-type: none; font-size:16px; line-height: 24px;
	font-weight:400;}

nav a {
    display: block;
    padding: .8rem 0; 
    color: #fff;
    text-align: center;
    text-decoration: none;
}
nav li.active {background-color: rgba(11,54,81,1);}
nav a:hover {background-color: rgba(255,255,255,0.1);}
nav ul.open {display: block;}
nav ul {display: none;}








/*----- Clearfix: Force an Element not to collapse -----*/
