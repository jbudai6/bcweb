html {-webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%;}

* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }


body {
    font-family:Public Sans;
    font-size: 24px;
    font-weight: 300;
	color: #4F4F4F;
}

body h1 {
	font-size: 64px;

}

body h2 {
	font-size: 24px;
}

body h3 {
	font-size: 16px;
}






/* GRID */
.row {clear: both;}
.limited {
    margin: auto;
}

.column {float: left; padding: 0 2vw; margin: 0 0 .75rem 0;}

.small-12 {width: 100%;}
.small-9 {width: 75%;}
.small-6 {width: 50%;}



.img-small-12 img {
    height: 100%;
    width: 100%;
}

.image-txt-container {
	display: flex;
	align-items: center;
	flex-direction: row;
}

	
.image-txt-container-medium {
}

.dark-background {
    background-color: #0B3651;
    background-attachment: fixed;
    background-size: cover;
    color: #FFFFFF;
    width: 100%;
    height: 100vh;
}


header{
    font-size: 24px;
    background-image: url('../images/Header_background.png');
    background-repeat: no-repeat;
    background-attachment: fixed;  
    background-size: cover;
	color: #FFFFFF;
}
header h1{
	font-size: 32px;
}
header h2{
    font-style: bold
    margin: 1rem 0 .3rem 0;
}
header ul {
    list-style-type: none;
    padding: 0;
     
}
header li {
    padding-top: .3rem;
}




footer {
    font-size: 1.2rem;
}
footer h2 {
    font-style: bold
    margin: 1rem 0 .3rem 0;
}
footer ul {
    list-style-type: none;
    padding: 0;
     
}
footer li {padding-bottom: .3rem;}

/*----- Clearfix: Force an Element not to collapse -----*/
.clearfix:after {
  content: "";
  display: table;
  clear: both;
}