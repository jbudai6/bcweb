@media only screen and (min-width: 768px) {
    
     /* GRID */
    .medium-6 {width: 50%;}
    .medium-4 {width: 33.33333%;}
	.column-img{flex:50%; padding: 0 4px}
	
	.img-small-remove{
		display: flex;
	
	}
	
	.image-txt-container {
		display: flex;
		align-items: center;
		flex-direction: row;
	}
	
	.image-txt-container-medium:before,
	.image-txt-container-medium {
		display: flex;
		align-items: center;
		flex-direction: row;
	}
	.image-txt-container-medium:after{
    clear: both;}


	main h1{
		font-size: 48px;
		line-height: 86px;
		font-weight:700;
	}
	
	main h2{
		font-size: 36px;
		line-height: 64px;
		font-weight:700;
	}


} /* end of media query */